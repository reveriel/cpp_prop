{
	"name": "C++ Dev Container",
	"image": "mcr.microsoft.com/vscode/devcontainers/cpp:ubuntu",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"ms-vscode.cpptools-extension-pack"
			]
		}
	},

	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake",

	"remoteUser": "vscode"
}
